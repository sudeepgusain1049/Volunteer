            <form role="form">
                <div class="modal-body">
                    
                    <div class="form-group">
                        @{
                            var languages = Model.Languages;
                            var count = languages.Count;
                            int countPerSection = count / 4;

                            <div class="col-sm-3">
                            @for (var i = 0; i < countPerSection; i++ )
                            {
                               var id = "lan" + languages[i].Id.ToString();
                                <div class="checkbox">
                                    <label>
                                        <input class="ChkLanguage" data-languageid="@languages[i].Language.ToString()" type="checkbox" id="@id" value="@languages[i].Language.Trim()"> @languages[i].Language
                                    </label>
                                </div>
                                
                            }
                            </div>
                            <div class="col-sm-3">
                            @for (var i = countPerSection; i < 2*countPerSection; i++)
                            {
                                var id = "lan" + languages[i].Id.ToString();
                                <div class="checkbox">
                                    <label>
                                        <input class="ChkLanguage" data-languageid="@languages[i].Language.ToString()"  class="Language" type="checkbox" id="@id" value="@languages[i].Language.Trim()"> @languages[i].Language
                                    </label>
                                </div>
                            }
                            </div>
