                                    <input type="text" name="diplomaLink" id="diplomaLink" class="col-sm-12" placeholder="e.g., http://en.wikipedia.org/microsoft/excel/foundation">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-4 text-left">
                        </div>
                        <div class="col-sm-8">
                            <button style="margin: 20px 10px 30px 0;" type="submit" class="btn btn-success pull-right">Suggest diploma/certificate <i class="glyphicon glyphicon-arrow-right"></i></button>
                            <button style="margin: 20px 10px 30px 0;" type="button" class="btn btn-default btn-danger pull-right" ng-click="cancelSuggestDiploma()" aria-hidden="true">Cancel</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Address questions -->
<div class="modal fade" id="locationNew" tabindex="-1" role="dialog" aria-labelledby="" aria-hidden="true">
    <div class="modal-dialog modal-md">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close big-close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h2 class="modal-title" id="myModalLabel">Add Address</h2>
            </div>
            <form role="form" name="jobForm" id="jobForm" novalidate>
                <div class="modal-body">
                    <div class="row margin-left--15">
                        <div class="col-sm-12">
                            <label>Country</label>
                        </div>
                        <div class="col-sm-12">
                            
                            @Html.DropDownListFor(model => model.CountryId, Model.Countries, new { @class="col-sm-12", @id="locationCountry"})

                        </div>
                        <div class="col-sm-12 margin-top-10 check-label">
                            <label>Zip Code</label>
                        </div>
                        <div class="col-sm-12">
                            <input type="text" class="col-sm-12" id="locationZip" ng-model="locationZip" placeholder="Enter zip code" />
                        </div>
                        <div class="col-sm-12 margin-top-10">
                            <label>Number</label>
                        </div>
                        <div class="col-sm-12">
                            <input type="text" class="col-sm-12" id="locationNumber" ng-model="locationNumber" placeholder="Enter number" />
                        </div>
                        <div class="col-sm-12 margin-top-15">
                            <input type="text" class="col-sm-12" ng-model="locationAddress" id="locationAddress" placeholder="shows full address after selecting country, entering zip code and number" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12 text-center center-block">
                            <button style="margin: 20px 10px 30px 0;" ng-click=" locationZip = ''; locationCountry = 'Netherlands'; locationNumber = ''; " data-dismiss="modal" type="button" class="btn btn-default btn-danger" aria-hidden="true">Cancel</button>
                            <button style="margin: 20px 0 30px 0;" data-dismiss="modal" class="btn btn-success" onclick="addressLocationShow()">Okey</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

}